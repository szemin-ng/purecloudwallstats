{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "go",
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "Go Build",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "showOutput": "always",
            "args": [
                "build"
            ],
            "problemMatcher": ["$msCompile"]
        },
        {
            "taskName": "Go Run",
            "suppressTaskName": true,
            "isTestCommand": true,
            "showOutput": "always",
            "args": [
                "run", "main.go"
            ],
            "problemMatcher": ["$msCompile"]
        }
    ]
}